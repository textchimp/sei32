
<h2>
  Planet <%= @planet.name %>
</h2>

<!-- /planets/:id/edit -->
<a href="<%= planet_edit_path(@planet.id) %>">Edit</a>
|
<a href="<%= planet_destroy_path(@planet.id) %>">Delete</a>

<p>
  <strong>Orbit</strong>:
  <%= @planet.orbit %> earth orbits
</p>
<p>
  <strong>Diameter</strong>:
  <%= @planet.diameter %> earth diameters
</p>
<p>
  <strong>Mass</strong>:
  <%= @planet.mass %> earth masses
</p>
<p>
  <strong>Temperature</strong>:
  <%= @planet.temperature %> earth temp
</p>
<p>
  <strong>Moons</strong>:
  <%= @planet.moons %>
</p>

<!--
<img src="<%= @planet.image %>" alt="<%= @planet.name %>">
-->

<!-- prevent image_tag from breaking the page if no image is defined (i.e. it's nil) -->
<% if @planet.image.present? %>
  <%= image_tag @planet.image, alt: @planet.name, class: 'planet-show' %>
<% end %>
