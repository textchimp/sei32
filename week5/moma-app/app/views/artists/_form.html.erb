
<%= form_for @artist do |f| %>
  <fieldset>
    <%= f.label :name %><!-- gives us a <label> tag -->
    <%= f.text_field :name %><!-- gives us <input type="text" name="name"> -->
  </fieldset>

  <fieldset>
    <%= f.label :nationality %>
    <%= f.text_field :nationality %>
  </fieldset>

  <fieldset>
    <%= f.label :dob, 'Date of Birth' %>
    <%= f.text_field :dob %>
  </fieldset>

  <fieldset>
    <%= f.label :period %>
    <%= f.text_field :period %>
  </fieldset>

  <fieldset>
    <%= f.label :roundness %>
    <%= f.text_field :roundness %>
  </fieldset>

  <fieldset>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
  </fieldset>

  <fieldset>
    <%= f.label :image, 'Image URL' %>
    <%= f.text_field :image %>
  </fieldset>

  <%= f.submit %>

<% end %>
