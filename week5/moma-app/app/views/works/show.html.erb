
<h2>
  <em><%= @work.title %></em>,
  <%= @work.year.year %>
</h2>

<p>
  <%= link_to @work.artist.name, artist_path(@work.artist.id) %>
</p>

<p><strong>Medium</strong>: <%= @work.medium %></p>
<p><strong>Style</strong>: <%= @work.style %></p>

<p>
  <%= link_to 'Edit this Work', edit_work_path(@work.id) %>
  |
  <%= link_to 'Delete this Work', work_path(@work.id), method: 'delete' %>
</p>

<%= cl_image_tag @work.image, alt: @work.title, class: 'work-main' %>
